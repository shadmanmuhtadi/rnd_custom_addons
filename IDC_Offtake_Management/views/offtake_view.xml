<!-- ECOM Target Tree View -->
    <record id="view_ecom_target_tree" model="ir.ui.view">
        <field name="name">ecom.target.tree</field>
        <field name="model">ecom.target</field>
        <field name="arch" type="xml">
            <tree string="File">
                <field name="date"/>
                <field name="level1"/>
                <field name="level1name"/>
                <field name="custtypename"/>
                <field name="customercode"/>
                <field name="customername"/>
                <field name="subbusiness"/>
                <field name="category"/>
                <field name="productcode"/>
                <field name="productname"/>
                <field name="tp"/>
                <field name="qty"/>
                <field name="value"/>
                <field name="brand"/>
                <field name="keyaccount"/>
            </tree>
        </field>
    </record>

