<odoo>
    <data>
        <record id="purchase_pi_form" model="ir.ui.view">
            <field name="name">Purchase Order pi</field>
            <field name="model">purchase.pi</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="ref" readonly="1" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="ref" />
                                <field name="pi_date" />
                                <field name="po_id" force_save="1"/>
                            </group>
                            <group>

                                <field name="partner_id"/>
                                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" />

                            </group>
                        </group>
                        <notebook>
                            <page string="Products">
                                <field name="pi_lines" widget="section_and_note_one2many" mode="tree">

                                    <tree string="pi Order Lines" editable="bottom">
                                        <field name="pi_id" invisible="1" />
                                        <field name="product_id"/>
                                        <field name="product_uom" />
                                        <field name="product_packaging_id" />
                                        <field name="price_unit" />
                                        <field name="product_qty" />
                                        <field name="remaining_qty" />
                                        <field name="qty_approved" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>


        <record id="purchase_pi_view_tree" model="ir.ui.view">
            <field name="name">purchase.pi.view.tree</field>
            <field name="model">purchase.pi</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="po_id" />
                    <field name="ref" string="PI Ref" readonly="1" />
                    <field name="company_id" />
                    <field name="partner_id" />
                </tree>
            </field>
        </record>


        <record id="purchase_pi_action_generic" model="ir.actions.act_window">
            <field name="name">Proforma Invoices</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.pi</field>
            <field name="domain">[]</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem 
            action="purchase_pi_action_generic"
            name="PI"
            id="menu_purchase_pi"
            parent="purchase.menu_procurement_management"
            sequence="-1" />
    </data>
</odoo>