</record>


    <menuitem
        id="bi"
        name="BI Reports - IDC"
        sequence = "40"/>

    <menuitem
        id="bi_all"
        name="IDC Total Sales"
        parent="bi"
        action="action_bi_report" 
        sequence = "20"/>
    
    <menuitem
        id="bi_district"
        name="District Rank"
        parent="bi"
        action="action_bi_district" 
        sequence = "10"/>

    <menuitem
        id="bi_kmd"
        name="KMD Sales"
        parent="bi"
        action="action_bi_kmd" 
        sequence = "30"/>

    <menuitem
        id="bi_fdn"
        name="FDN Sales"
        parent="bi"
        action="action_bi_fdn" 
        sequence = "40"/>

</odoo>
