<!--Bi Fdn Action -->
<record id="action_bi_fdn" model="ir.actions.act_window">
    <field name="name">Bi FDN</field>
    <field name="res_model">bi.fdn</field>
    <field name="view_mode">form</field>
    <field name="help" type="html">
